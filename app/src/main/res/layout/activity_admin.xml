<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Controller.Admin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            >

            <ImageButton
                android:id="@+id/imgBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:src="@drawable/logout_icon"
                app:layout_constraintTop_toTopOf="@id/textview" />

            <TextView
                android:id="@+id/textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/bungee"
                android:gravity="center"
                android:text="Hello Admin"
                android:textColor="#000"
                android:textSize="25sp"></TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/lnUser"
                android:layout_width="200dp"
                android:layout_height="230dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:padding="15dp">

                <ImageButton
                    android:id="@+id/imgUser"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@null"
                    android:padding="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_person"
                    tools:srcCompat="@tools:sample/avatars"></ImageButton>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bungee"
                    android:gravity="center"
                    android:text="User"
                    android:textColor="#FF3D00"
                    android:textSize="15sp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnQuanAn"
                android:layout_width="200dp"
                android:layout_height="230dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <ImageButton
                    android:id="@+id/imgFood"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@null"
                    android:padding="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_food"></ImageButton>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bungee"
                    android:gravity="center"
                    android:text="Quán Ăn"
                    android:textColor="#FF3D00"
                    android:textSize="15sp"></TextView>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lnDiaChi"
                android:layout_width="200dp"
                android:layout_height="230dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <ImageButton
                    android:id="@+id/imgNear"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@null"
                    android:padding="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_nearby"></ImageButton>

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bungee"
                    android:gravity="center"
                    android:text="Gần tôi"
                    android:textColor="#FF3D00"
                    android:textSize="15sp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnBinhLuan"
                android:layout_width="200dp"
                android:layout_height="230dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <ImageButton
                    android:id="@+id/imgComment"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@null"
                    android:padding="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_comment"></ImageButton>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bungee"
                    android:gravity="center"
                    android:text="Bình luận"
                    android:textColor="#FF3D00"
                    android:textSize="15sp"></TextView>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>