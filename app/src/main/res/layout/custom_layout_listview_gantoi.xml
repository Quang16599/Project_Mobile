<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/imageViewGanToi"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_phone"
        android:text="10km"
        android:textColor="#00B0FF"
        ></TextView>

    <TextView
        android:id="@+id/khoangcach"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imageViewGanToi"
        android:gravity="center"
        android:padding="10dp"
        android:text="10km"
        android:textSize="20dp">

    </TextView>

    <TextView
        android:id="@+id/textViewTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/khoangcach"
        android:paddingTop="5dp"
        android:text="Tên"
        android:textColor="#D30B4F"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textViewDiaChi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTen"
        android:layout_toRightOf="@id/khoangcach"
        android:paddingTop="20dp"
        android:text="Địa chỉ"
        android:textSize="15dp" />

</RelativeLayout>