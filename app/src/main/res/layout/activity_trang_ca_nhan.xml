<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Controller.TrangCaNhan">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/custom_avatar"

        ></Button>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FullName"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_user"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UserName"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_person"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_key"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_mail"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PhoneNumber"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_phone"></TextView>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
           android:layout_gravity="center"
            android:text="Change Password"
            android:textColor="#00BCD4">

        </Button>

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="#fff"
            android:text="Log Out"
            android:textColor="#F43646"></Button>
    </LinearLayout>
</LinearLayout>